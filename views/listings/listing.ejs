<% layout('layouts/boilerplate') -%>

<div class="categoryLine d-md-flex">
  <div class="filters">
    <div class="filter">
      <div class="icon"><i class="fa-solid fa-igloo"></i></div>
      <p>Igloo</p>
    </div>
    <div class="filter">
      <div class="icon"><i class="fa-solid fa-umbrella-beach"></i></div>
      <p>Beach</p>
    </div>
    <div class="filter">
      <div class="icon"><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>
    <div class="filter">
      <div class="icon"><i class="fa-solid fa-mountain-sun"></i></div>
      <p>Moutain</p>
    </div>
    <div class="filter">
      <div class="icon"><i class="fa-solid fa-person-skiing"></i></div>
      <p>Skiing</p>
    </div>
    <div class="filter">
      <div class="icon">
        <i class="fa-solid fa-table-tennis-paddle-ball"></i>
      </div>
      <p>Play</p>
    </div>
    <div class="filter">
      <div class="icon"><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
    <div class="filter">
      <div class="icon"><i class="fa-solid fa-sailboat"></i></div>
      <p>Boats</p>
    </div>
    <div class="filter">
      <div class="icon"><i class="fa-solid fa-water"></i></div>
      <p>Lake</p>
    </div>
  </div>
  <div class="taxSwitch">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        id="flexSwitchCheckDefault"
      />
      <label class="form-check-label" for="flexSwitchCheckDefault"
        >Display total after taxes</label
      >
    </div>
  </div>
</div>

<div class="row listing-row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-1">
  <% for(let listing of allListings) { %>
  <div class="col">
    <div class="card mainCards">
      <a href="/listings/<%= listing._id %>" class="card-link">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="<%= listing.image.filename %>"
        />
        <!-- <div class="card-img-overlay"></div> -->
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b> <br />
            <p>&#8377;<%= listing.price.toLocaleString("en-IN") %> <i class="tax-info">&nbsp; &nbsp; <b>+18% GST</i></b></p>
          </p>
        </div>
      </a>
    </div>
  </div>
  <% } %>
</div>
